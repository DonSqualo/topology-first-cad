[Unit]
Description=Topology-First CAD morse-server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=orbiter1
Group=orbiter1
WorkingDirectory=/home/orbiter1/projects/topology-first-cad
Environment=PORT=8790
